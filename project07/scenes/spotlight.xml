      <material type="blinn" name="blueish" ambient="0.6 0.6 0.6" diffuse ="0.1 0.2 0.9"  specular ="0.8 0.8 0.8" mirror ="0.0 0.0 0.0" glossiness ="16"/>
      <object type="sphere" radius="1" center="2 1 -2"/>

      <material type="blinn" name="gold" ambient="0.4 0.4 0.4" diffuse ="1 0.65 0.0"   specular ="0.8 0.6 0.2" mirror ="0.0 0.0 0.0" glossiness ="256"/>
      <object type="sphere" radius="1.7" center="3 1.7 7"/>

      <material type="blinn" name="grey" ambient="0.1 0.1 0.1" diffuse ="0.7 0.7 0.7"  specular ="0 0 0" mirror ="0.1 0.1 0.1" glossiness ="0"/>
      <object type="sphere" radius="5000" center="0 -5000.0 0"/>

    <world_end/>
</RT3>